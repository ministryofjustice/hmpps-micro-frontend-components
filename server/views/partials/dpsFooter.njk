<footer class="connect-dps-common-footer govuk-!-display-none-print" role="contentinfo">
    <div class="govuk-width-container">
        <div class="govuk-grid-row">
            <div id="connect-dps-common-footer-services" class="govuk-grid-column-three-quarters connect-dps-common-footer__services-menu">
                <h2>Services</h2>
                <ul class="govuk-list">
                    {% for service in user.services %}
                        {% if service.navEnabled %}
                            <li><a class="connect-dps-common-footer__link" href="{{ service.href }}">{{ service.heading }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            <div class="govuk-grid-column-one-quarter">
                <div class="connect-dps-common-footer__help">
                    <h2>Get help with DPS</h2>
                    <p>Call 0800 917 5148 or #6598 from inside an establishment.</p>
                </div>
            </div>
        </div>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <div class="connect-dps-common-footer__support-links">
                    <h2 class="govuk-visually-hidden">Support links</h2>

                    <ul class="connect-dps-common-footer__inline-list">
                        <li class="connect-dps-common-footer__inline-list-item">
                            <a class="connect-dps-common-footer__link" href="https://www.smartsurvey.co.uk/s/43EWY0/" target="_blank" referrerpolicy="no-referrer" rel="noopener">
                                Feedback (opens in a new tab)
                            </a>
                        </li>

                        {% for page in managedPages %}
                            <li class="connect-dps-common-footer__inline-list-item">
                                <a class="connect-dps-common-footer__link" href="{{ page.href }}">
                                    {{ page.text }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>
